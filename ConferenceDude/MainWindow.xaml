<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://Neumann/SharedUI"
        x:Class="ConferenceDude.MainWindow"
        Title="MainWindow" Height="450" Width="625" WindowStartupLocation="CenterScreen"
    FontFamily="{StaticResource DefaultFontFamily}"
    Background="{StaticResource DefaultBackground}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" MinWidth="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <ListBox x:Name="modulesListBox" SelectionChanged="modulesListBox_SelectionChanged"/>
        <Border x:Name="border" Grid.Column="1" Background="Gray">
            <Image Source="{StaticResource InformationImage}" Stretch="None"/>
        </Border>
    </Grid>
</Window>
